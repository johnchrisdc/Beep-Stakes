<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.MRT3">
        <item name="colorAccent">@color/color_mrt3</item>
    </style>

    <style name="AppTheme.LRT1">
        <item name="colorAccent">@color/color_lrt1</item>
    </style>

    <style name="AppTheme.LRT2">
        <item name="colorAccent">@color/color_lrt2</item>
    </style>

    <style name="AppTheme.BGCCentral">
        <item name="colorAccent">@color/bgc_central</item>
    </style>

    <style name="AppTheme.BGCEast">
        <item name="colorAccent">@color/bgc_east</item>
    </style>

    <style name="AppTheme.BGCLowerWest">
        <item name="colorAccent">@color/bgc_lower_west</item>
    </style>

    <style name="AppTheme.BGCNight">
        <item name="colorAccent">@color/bgc_night</item>
    </style>

    <style name="AppTheme.BGCNorth">
        <item name="colorAccent">@color/bgc_north</item>
    </style>

    <style name="AppTheme.BGCUpperWest">
        <item name="colorAccent">@color/bgc_upper_west</item>
    </style>

    <style name="AppTheme.BGCWest">
        <item name="colorAccent">@color/bgc_lower_west</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
